//		JPanel obtainDurationBillingPanel = new ObtainDurationBilling();
//		JPanel queryUsagePanel = new QueryUsagePanel();

		// 把定义好的子面板放入卡片布局中
		displayNext.add("welcomeTag", welcomePanel);
