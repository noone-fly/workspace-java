package io.pierre.frame;

import javax.swing.JMenu;
import javax.swing.JMenuBar;

/**
 * 
 * @author chenpiyang
 *
 */
public class JMenuBarTools extends JMenuBar {
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	
	public JMenuBarTools() {
	}
	
	public static void addMenu(JMenuBar menuBar, String name) {
		JMenu menu = new JMenu(name);
		menuBar.add(menu);
	}
}
